<div class="login-wrapper">
  <div class="container">
    <div class="login-form">
      <div class="card">
        <div class="card-header">
           <h3 class="text-center">Connexion</h3>
        </div>
        <div class="card-body">
         

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Votre email", required: true %>
              </div>

              <div class="form-group">
                <%= f.label "Mot de passe" %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Votre mot de passe", required: true %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label "Se souvenir de moi" %>
                </div>
              <% end %>

            <div class="form-group">
              <%= f.submit "Se connecter", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

            <%= render "users/shared/links" %>
          </div>
        </div>
    </div>
  </div>
</div>