<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="page-wrapper">
<div class="jumbotron">
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<h1 class="display-3">
					Faîtes des rencontres...
				</h1>
				<p>
				Faîtes des rencontres sans jugements et sans préjugés, juste pour le plaisir !				
				</p>
			</div>
			<div class="col-md-5">
				<div class="card">
					<div class="card-body">
						<h3 class="card-title">Inscription</h3>
					
						<p class="card-text">

								<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
									
										<div class="row">
											<div class="col-sm-6">
												<div class="form-group">
													<%= f.text_field :login, autofocus: true, placeholder: "Pseudo", class: "form-control", required: true %>
												</div>
											</div>
											<div class="col-sm-6">
												<%= f.fields_for :profile do |p| %>
													<div class="form-group">
														<%= p.select :gender, User::SEXE,   {prompt: "Je suis un(e)"},  class: "form-control", required: true %>
													</div>
												<% end %>
											</div>

										</div>
									
										<!-- Profile nested form -->
										<%= f.fields_for :profile do |p| %>
											

											<div class="row">

												
												<div class="col-sm-6">
													
													<div class="form-group">
														<%= p.collection_select(:country, ISO3166::Country.countries.sort_by(&:name).collect { |c| [ c.name, "#{c.name}" ] }, :first, :last, {include_blank: 'Pays'}, class: "form-control", 'data-style': 'form-control', required: true) %>													
													</div>
												
												</div>
												<div class="col-sm-6">
													
													<div class="form-group">
														<%= p.text_field :city, class: "form-control", placeholder: "Ville",  required: true %>													
													</div>
												
												</div>
											</div>
												
										<% end %>
									
									<div class="row">
										<div class="col-sm-12">
											<div class="form-group">
												<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "form-control", required: true %>
											</div>
										</div>
									</div>
									<div class="row">
										

										<div class="col-sm-12">

											<div class="form-group">
												<%= f.password_field :password, autocomplete: "new-password", placeholder: "Mot de passe",  class: "form-control", required: true %>
											</div>
											
										</div>
										
										
									</div>
									<div class="row">
										<div class="col-sm-12">
											<div class="form-group">
												<%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmation du mot de passe", class: "form-control", required: true %>
											</div>
										</div>

									</div>
										
									<div class="row">
										<div class="col-sm-12">
											<div class="form-group">
												En continuant votre inscription, vous déclarez avoir plus de 18 ans et acceptez les <%= link_to "CGU", cgu_path %> de la plateforme.
											</div>
									
											<div class="form-group">
												<%= f.submit "S'inscrire", class: "btn btn-lg  btn-primary btn-block" %>
											</div>
										</div>
									</div>
									
								<% end %>
							
						</p>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
</div>

  
    