<div class="login-wrapper">
  <div class="container">
    <div class="login-form">
      <div class="card">
        <div class="card-header">
    <h3 class="text-center"><%= t("devise.shared.links.forgot_your_password") %></h3>
    </div>
    <div class="card-body">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Votre email ici!", required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "Envoi moi les instructions", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

    <%= render "users/shared/links" %>
    </div>
    </div>
    </div>
  </div>
</div>