<p id="notice"><%= notice %></p>

<h1>Blockings</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blockings.each do |blocking| %>
      <tr>
        <td><%= blocking.sender_id %></td>
        <td><%= blocking.recipient_id %></td>
        <td><%= blocking.status %></td>
        <td><%= link_to 'Show', blocking %></td>
        <td><%= link_to 'Edit', edit_blocking_path(blocking) %></td>
        <td><%= link_to 'Destroy', blocking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blocking', new_blocking_path %>
